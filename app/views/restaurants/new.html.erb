<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1>New Restaurant</h1>
      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name, placeholder: 'Name of the restaurant'%>
        <%= f.input :address, placeholder: 'Address of the restaurant' %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: Restaurant::CATEGORY %>
        <%= f.submit "Submit your restaurant", class: 'btn btn-primary' %>
        <%= link_to "All restaurants", restaurants_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
